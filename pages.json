{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "首页",
				"backgroundColor": "#ccc",
				// 下方是使用有赞团队的移动UI框架的button样式
				// 引用Vant组件时 "van-button": "@vant/weapp/button/index"
				// 将 @vant/weapp  替换成 =》   /wxcomponents/weapp/dist/
				// 别忘了最前边的斜杠 / wxcomponents
				"usingComponents": {
					// "van-button": "/wxcomponents/weapp/dist/button/index",
					// tab-layout
					"van-tab": "/wxcomponents/weapp/dist/tab/index",
					"van-tabs": "/wxcomponents/weapp/dist/tabs/index",
					// 粘性布局
					"van-sticky": "/wxcomponents/weapp/dist/sticky/index"
				}
			}
		},
		{
			"path": "pages/goods/index",
			"style": {
				"navigationBarTitleText": "商品",
				// 下方是使用有赞团队的移动UI框架的button样式
				// 引用Vant组件时 "van-button": "@vant/weapp/button/index"
				// 将 @vant/weapp  替换成 =》   /wxcomponents/weapp/dist/
				// 别忘了最前边的斜杠 / wxcomponents
				"usingComponents": {
					"van-button": "/wxcomponents/weapp/dist/button/index",
					"van-search": "/wxcomponents/weapp/dist/search/index",
					// 弹性布局
					"van-row": "/wxcomponents/weapp/dist/row/index",
					"van-col": "/wxcomponents/weapp/dist/col/index",
					// 吸顶布局
					"van-sticky": "/wxcomponents/weapp/dist/sticky/index",
					// tab-layout
					"van-tab": "/wxcomponents/weapp/dist/tab/index",
					"van-tabs": "/wxcomponents/weapp/dist/tabs/index"
				}
			}
		},
		{
			"path": "pages/me/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "交小哇",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#222222",
		"selectedColor": "#EB5946",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/home/index",
			"iconPath": "static/images/icons/tabbar/icon-home-default.png",
			"selectedIconPath": "static/images/icons/tabbar/icon-home-active.png",
			"text": "首页"
		}, {
			"pagePath": "pages/goods/index",
			"iconPath": "static/images/icons/tabbar/icon-goods-default.png",
			"selectedIconPath": "static/images/icons/tabbar/icon-goods-active.png",
			"text": "商品"
		}, {
			"pagePath": "pages/me/index",
			"iconPath": "static/images/icons/tabbar/icon-me-default.png",
			"selectedIconPath": "static/images/icons/tabbar/icon-me-active.png",
			"text": "我的"
		}]
	}
}
