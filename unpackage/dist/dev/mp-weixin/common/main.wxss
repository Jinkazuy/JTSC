.nowrap {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.spaceX {
	width: 100%;
	height: 20rpx;
	background-color: #f5f5f5;
}
.borderbox {
	box-sizing: border-box;
}
/* 2 行不回行 */
.sum-nowrap {
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.clearfix:before,.clearfix:after { 
  content:"";
  display:table;  /* 这句话可以出发BFC BFC可以清除浮动,BFC我们后面讲 */
}
.clearfix:after {
 clear:both;
}
